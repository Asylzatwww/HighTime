<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:paddingBottom="100dp"
            android:orientation="vertical">





            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="41dp"
                app:srcCompat="@drawable/logo" />

            <Button
                android:id="@+id/btn_main2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Главная"
                android:textAllCaps="false"
                android:textColor="#6C8CC7"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_studentam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="StudentamActivityOpen"
                android:text="Студентам"
                android:textAllCaps="false"
                android:textColor="#6C8CC7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_onas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="ONasActivityOpen"
                android:text="О Нас"
                android:textAllCaps="false"
                android:textColor="#6C8CC7"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="InstructionActivityOpen"
                android:text="Инструкция"
                android:textAllCaps="false"
                android:textColor="#6C8CC7"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_nashakomanda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="NashaComandaActivityOpen"
                android:text="Наша команда"
                android:textAllCaps="false"
                android:textColor="#6C8CC7"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_nashifilialy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="FilialActivityOpen"
                android:text="Наши филиалы"
                android:textAllCaps="false"
                android:textColor="#6C8CC7"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Новости"
                android:textAllCaps="false"
                android:textColor="#6C8CC7"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@android:color/transparent"
                android:onClick="ContactActivityOpen"
                android:text="Контакты"
                android:textAllCaps="false"
                android:textColor="#6C8CC7"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:background="@drawable/mybutton"
                android:onClick="LoginActivityOpen"
                android:text="Логин"
                android:textColor="@android:color/white"

                />


            <Button
                android:id="@+id/btn_registration"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center"

                android:layout_marginBottom="12dp"
                android:background="@drawable/mybutton"
                android:onClick="RegisterActivityOpen"
                android:text="Регистрация"
                android:textColor="@android:color/white"

                />

            <Button
                android:id="@+id/btn_quit"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/mybutton"
                android:onClick="QuitUser"
                android:text="Выход"
                android:textColor="@android:color/white"

                />


        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>