<?xml version="1.0" encoding="utf-8"?>



    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:orientation="vertical">

    <TextView
        android:id="@+id/test1text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="@string/test1text"
        android:textAppearance="@style/test1text"
        />

    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/line"
        />

        <RadioButton android:id="@+id/radio_quest1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="pirates1"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/radio_quest2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="38dp"
            android:text="ninjas1"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/radio_quest3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="ninjas1"
            android:onClick="onRadioButtonClicked"/>

    </RadioGroup>



